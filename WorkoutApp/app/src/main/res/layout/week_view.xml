<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
<LinearLayout 
    android:orientation="horizontal"
    android:padding="10dp"
    android:elevation="3dp"
    android:weightSum="7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mondayLabel"
            android:elevation="3dp"
            android:layout_centerHorizontal="true"
            android:text="M"/>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="20dp"
            android:setTags="@{2}"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/mondayLabel"
            android:clipToPadding="true"
            android:id="@+id/mondayCard"

            android:layout_margin="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/mondayTv"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tuesdayLabel"
            android:layout_centerHorizontal="true"
            android:text="T"/>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="20dp"
            android:setTags="@{3}"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tuesdayLabel"
            android:clipToPadding="true"
            android:id="@+id/tuesdayCard"
            android:layout_margin="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="11"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:id="@+id/tuesdayTv"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wednesdayLabel"
            android:layout_centerHorizontal="true"
            android:text="W"/>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/wednesdayLabel"
            android:clipToPadding="true"
            android:setTags="@{4}"
            android:id="@+id/wednesdayCard"
            android:layout_margin="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:id="@+id/wednesdayTv"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thursdayLabel"
            android:layout_centerHorizontal="true"
            android:text="T"/>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="20dp"
            android:setTags="@{5}"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/thursdayLabel"
            android:clipToPadding="true"
            android:id="@+id/thursdayCard"
            android:layout_margin="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:id="@+id/thursdayTv"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fridayLabel"
            android:layout_centerHorizontal="true"
            android:text="F"/>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fridayLabel"
            android:clipToPadding="true"
            android:setTags="@{6}"
            android:id="@+id/fridayCard"
            android:layout_margin="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:id="@+id/fridayTv"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saturdayLabel"
            android:layout_centerHorizontal="true"
            android:text="S"/>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="20dp"
            android:layout_centerHorizontal="true"
            android:setTags="@{7}"
            android:layout_below="@id/saturdayLabel"
            android:clipToPadding="true"
            android:id="@+id/saturdayCard"
            android:layout_margin="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:id="@+id/saturdayTv"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sundayLabel"
            android:layout_centerHorizontal="true"
            android:text="S"/>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sundayLabel"
            android:clipToPadding="true"
            android:setTags="@{1}"
            android:id="@+id/sundayCard"
            android:layout_margin="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:id="@+id/sundayTv"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>
</layout>