<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SettingsFragment">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fitsSystemWindows="true"
        android:background="@color/primaryColor"
        android:title="Health Data"
        android:titleTextColor="@color/white"
        android:id="@+id/appBarLayout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/design_default_color_on_secondary"
        android:text="Name"
        android:layout_below="@id/appBarLayout"
        android:id="@+id/nameHeading"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        android:inputType="none"
        android:background="@android:color/transparent"
        android:hint="Enter Name"
        android:padding="7dp"
        android:id="@+id/nameText"
        android:layout_below="@id/nameHeading"
        android:layout_marginTop="-5dp"
        android:layout_marginHorizontal="15dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/nameText"
    android:textSize="16sp"
   android:textColor="@color/design_default_color_on_secondary"
    android:text="Weight"
    android:id="@+id/weightHeading"
    android:layout_marginHorizontal="14dp"
    android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        android:id="@+id/wText"
        android:layout_below="@id/weightHeading"
        android:text="0.00 KG"
        android:padding="6dp"
        android:layout_marginTop="-5dp"
        android:layout_marginHorizontal="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wText"
        android:textSize="16sp"
        android:textColor="@color/design_default_color_on_secondary"
        android:text="Height"
        android:id="@+id/heightHeading"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        android:inputType="none"
        android:id="@+id/hText"
        android:layout_below="@id/heightHeading"
        android:text="0.00 CM"
        android:layout_marginTop="-5dp"
        android:padding="7dp"
        android:layout_marginHorizontal="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hText"
        android:textSize="16sp"
        android:textColor="@color/design_default_color_on_secondary"
        android:text="Date of Birth"
        android:id="@+id/dobHeading"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        android:inputType="none"
        android:padding="7dp"
        android:id="@+id/dobText"
        android:layout_below="@id/dobHeading"
        android:text="1999-11-10"
        android:layout_marginTop="-5dp"
        android:layout_marginHorizontal="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dobText"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableTint="@color/white"
        android:drawablePadding="5dp"
        android:id="@+id/cont"
        android:text="Continue"
        android:textAllCaps="false"/>
</RelativeLayout>
</layout>